@model ChangeEmailViewModel

@{
	ViewData["Title"] = "Change E-mail";
}

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<div class="container push text-center">
			<h1 class="mt-5 display-1">@ViewData["Title"]</h1>
			<hr />
			<form asp-area="" asp-controller="Account" asp-action="ChangeEmail" method="post">
				<div class="mb-3 mt-3">
					<label asp-for="@Model.NewEmail" class="fw-bold"></label>
					<input asp-for="@Model.NewEmail" class="form-control" aria-required="true" />
					<span asp-validation-for="@Model.NewEmail" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<input class="btn btn-success" type="submit" value="Change" />
				</div>
			</form>
		</div>
	</div>
</div>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
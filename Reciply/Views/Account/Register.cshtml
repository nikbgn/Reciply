@model RegisterViewModel;
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center mt-5">@ViewData["Title"]</h1>

<div class="row push">
    <div class="col-md-4 offset-md-4">
        <form id="registerForm" method="post">
            <hr />
            <div class="text-center mb-3">
                <label asp-for="@Model.Email"></label>
                <input class="form-control " placeholder="Your email" aria-required="true" asp-for="@Model.Email" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Password"></label>
                <input class="form-control" placeholder="Your password" type="password" autocomplete="new-password" aria-required="true" asp-for="@Model.Password" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.PasswordRepeat"></label>
                <input class="form-control" placeholder="Repeat password" type="password" autocomplete="new-password" aria-required="true" asp-for="@Model.PasswordRepeat" />
                <span asp-validation-for="@Model.PasswordRepeat" class="text-danger"></span>
            </div>            
            <div class="text-center">
                <button id="registerSubmit" type="submit" class="btn btn-success">Register</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
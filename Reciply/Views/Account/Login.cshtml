@model LoginViewModel;
@{
    ViewData["Title"] = "Login";
}

<h1 class="text-center mt-5">@ViewData["Title"]</h1>

<div class="row push">
    <div class="col-md-4 offset-md-4">
        <form id="loginForm" method="post">
            <hr />
            <input type="hidden" asp-for="ReturnUrl" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Email"></label>
                <input class="form-control " aria-required="true" asp-for="@Model.Email" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Password"></label>
                <input class="form-control" type="password" autocomplete="new-password" aria-required="true" asp-for="@Model.Password" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button id="loginSubmit" type="submit" class="btn btn-success">Login</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
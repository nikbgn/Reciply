@using Microsoft.AspNetCore.Identity
@using Reciply.Data.Models;
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
	@if (SignInManager.IsSignedIn(User))
	{

		<li class="nav-item">
			<a class="nav-link btn btn-outline-primary text-light m-1" asp-area="" asp-controller="Account" asp-action="Manage" title="My Profile">My Profile</a>
		</li>

		<li class="nav-item">
			<form class="form-inline" asp-area="" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
				<input class="nav-link w-100 btn btn-outline-primary m-1 text-light" value="Logout" type="submit" />
			</form>
		</li>
	}
	else
	{
		<li class="nav-item">
			<a class="nav-link text-light m-1 btn btn-outline-primary" asp-controller="Account" asp-action="Register">Register</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-light m-1 btn btn-outline-primary" asp-controller="Account" asp-action="Login">Login</a>
		</li>
	}
</ul>

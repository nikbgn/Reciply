@model RecipeServiceModel



<div class="col">
	<div class="card border-secondary shadow-sm">
		<img src="data:image;base64,@Convert.ToBase64String(Model.RecipeImage)" class="card-img-top" alt="Recipe image thumbnail.">
		<div class="card-body">
			<h4>@Model.Name</h4>
			<p class="card-text" style="white-space: nowrap; text-overflow: ellipsis; overflow:hidden;">
				@Model.Ingridients
			</p>
			<div>
				<form method="get">
					<button type="submit" class="btn btn-outline-primary" asp-route-recipeId="@Model.Id" asp-controller="Recipes" asp-action="RecipeInformation">Read more</button>
				</form>
			</div>
			<div>
			</div>
		</div>
	</div>
</div>
